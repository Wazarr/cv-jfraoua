---
import Layout from "./Layout.astro";
import TerminalWindow from "../components/TerminalWindow.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout {title}>
  <div class="container mx-auto px-4 py-8 space-y-8">
    <TerminalWindow
      title="project_details.md"
      headerColor="primary"
      className="max-w-4xl mx-auto"
    >
      <div class="prose max-w-none">
        <style>
          /* Light mode prose styles */
          .prose {
            color: #3c4043;
          }
          .prose h1 {
            color: #d35400;
            font-family: "JetBrains Mono", monospace;
            font-size: 2.5rem;
            margin-bottom: 1rem;
          }
          .prose h2 {
            color: #15803d;
            font-family: "JetBrains Mono", monospace;
            font-size: 1.75rem;
            margin-top: 2rem;
            margin-bottom: 1rem;
            border-bottom: 2px solid #e8eaed;
            padding-bottom: 0.5rem;
          }
          .prose h3 {
            color: #1e40af;
            font-family: "JetBrains Mono", monospace;
            font-size: 1.5rem;
            margin-top: 1.5rem;
            margin-bottom: 0.75rem;
          }
          .prose h4,
          .prose h5,
          .prose h6 {
            color: #15803d;
            font-family: "JetBrains Mono", monospace;
          }
          .prose p {
            color: #3c4043;
            line-height: 1.7;
            margin-bottom: 1rem;
          }
          .prose a {
            color: #d35400;
            text-decoration: none;
          }
          .prose a:hover {
            color: #a04300;
            text-decoration: underline;
          }
          .prose code {
            color: #1e40af;
            background-color: #f1f3f4;
            padding: 0.125rem 0.25rem;
            border-radius: 0.25rem;
            font-family: "JetBrains Mono", monospace;
            border: 1px solid #e8eaed;
          }
          .prose pre {
            background-color: #f8f9fa;
            border: 1px solid #e8eaed;
            border-radius: 0.5rem;
            padding: 1rem;
            overflow-x: auto;
            margin: 1rem 0;
          }
          .prose pre code {
            background-color: transparent;
            padding: 0;
            color: #15803d;
            border: none;
          }
          .prose blockquote {
            border-left: 4px solid #d35400;
            background-color: #f8f9fa;
            padding: 1rem;
            margin: 1rem 0;
            font-style: italic;
            border: 1px solid #e8eaed;
            border-left: 4px solid #d35400;
          }
          .prose ul,
          .prose ol {
            color: #3c4043;
            margin-bottom: 1rem;
          }
          .prose li {
            margin: 0.5rem 0;
            color: #3c4043;
          }
          .prose li::marker {
            color: #15803d;
          }
          .prose strong {
            color: #d35400;
            font-weight: 600;
          }
          .prose em {
            color: #1e40af;
          }
          .prose img {
            border-radius: 0.5rem;
            border: 1px solid #e8eaed;
            margin: 1rem 0;
          }

          /* Dark mode prose styles */
          .dark .prose {
            color: #cbd5e1;
          }
          .dark .prose h1 {
            color: #f97316;
          }
          .dark .prose h2 {
            color: #22c55e;
            border-bottom: 2px solid #334155;
          }
          .dark .prose h3 {
            color: #3b82f6;
          }
          .dark .prose h4,
          .dark .prose h5,
          .dark .prose h6 {
            color: #22c55e;
          }
          .dark .prose p {
            color: #cbd5e1;
          }
          .dark .prose a {
            color: #f97316;
          }
          .dark .prose a:hover {
            color: #fb923c;
          }
          .dark .prose code {
            color: #3b82f6;
            background-color: #334155;
            border: 1px solid #475569;
          }
          .dark .prose pre {
            background-color: #0f172a;
            border: 1px solid #334155;
          }
          .dark .prose pre code {
            color: #22c55e;
            border: none;
          }
          .dark .prose blockquote {
            border-left: 4px solid #f97316;
            background-color: #1e293b;
            border: 1px solid #334155;
          }
          .dark .prose ul,
          .dark .prose ol {
            color: #cbd5e1;
          }
          .dark .prose li {
            color: #cbd5e1;
          }
          .dark .prose li::marker {
            color: #22c55e;
          }
          .dark .prose strong {
            color: #f97316;
          }
          .dark .prose em {
            color: #3b82f6;
          }
          .dark .prose img {
            border: 1px solid #334155;
          }
        </style>
        <slot />
      </div>
    </TerminalWindow>

    <!-- Project Navigation -->
    <div class="max-w-4xl mx-auto">
      <div class="bg-light-200 dark:bg-dark-800 rounded-lg p-6 border border-light-300 dark:border-dark-700">
        <div
          class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
        >
          <a
            href="/projects"
            class="flex items-center space-x-2 text-terminal-400 hover:text-terminal-300 transition-colors"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 19l-7-7 7-7"></path>
            </svg>
            <span>Back to Projects</span>
          </a>

          <!-- Project Quick Links -->
          <div class="flex flex-wrap justify-center gap-3">
            <a
              href="/projects/vibetrip"
              class="px-3 py-2 bg-primary-600 hover:bg-primary-500 text-white rounded-lg text-sm transition-colors"
            >
              VibeTrip
            </a>
            <a
              href="/projects/haxball-ai"
              class="px-3 py-2 bg-terminal-600 hover:bg-terminal-500 text-white rounded-lg text-sm transition-colors"
            >
              HaxballGym
            </a>
            <a
              href="/projects/haxball-dashboard"
              class="px-3 py-2 bg-code-600 hover:bg-code-500 text-white rounded-lg text-sm transition-colors"
            >
              Dashboard
            </a>
            <a
              href="/projects/ens-firefighters"
              class="px-3 py-2 bg-dark-600 hover:bg-dark-500 text-white rounded-lg text-sm transition-colors"
            >
              ENS Challenge
            </a>
          </div>

          <div class="flex space-x-3">
            <a
              href="mailto:jeremy.fraoua@gmail.com"
              class="bg-primary-600 hover:bg-primary-500 text-white px-4 py-2 rounded-lg text-sm transition-colors"
            >
              Contact
            </a>
            <a
              href="/chat"
              class="bg-code-600 hover:bg-code-500 text-white px-4 py-2 rounded-lg text-sm transition-colors"
            >
              Discuss
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
