---
interface Props {
  title: string;
  description: string;
  link: string;
}

const { title, description, link } = Astro.props;
---

<div
  class="rounded-lg border bg-white dark:bg-gray-800 text-gray-900 dark:text-white shadow-md transition-colors duration-300 flex flex-col h-full"
>
  <div class="p-4 sm:p-6 flex-grow">
    <h3 class="text-xl sm:text-2xl font-semibold mb-2">
      {title}
    </h3>
    <p
      class="text-sm sm:text-base text-gray-600 dark:text-gray-300"
      set:html={description}
    />
  </div>
  <div class="px-4 pb-4 sm:px-6 sm:pb-6 pt-0">
    <a
      href={link}
      class="inline-block text-sm sm:text-base text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 transition-colors duration-300"
    >
      View Project &rarr;
    </a>
  </div>
</div>
