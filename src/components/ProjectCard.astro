---
interface Props {
  title: string;
  description: string;
  link: string;
}

const { title, description, link } = Astro.props;
---

<div class="rounded-lg border bg-card text-card-foreground shadow-sm bg-white">
  <div class="flex flex-col space-y-1.5 p-6">
    <h3
      class="text-2xl font-semibold whitespace-nowrap leading-none tracking-tight"
    >
      {title}
    </h3>
  </div>
  <div class="p-6">
    <p class="text-sm">{description}</p>
  </div>
  <div class="flex items-center p-6">
    <a class="text-sm underline" href={link}>View Project</a>
  </div>
</div>
